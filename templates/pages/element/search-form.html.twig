{% set searchForm = search.generateForm() %}
{% form_theme searchForm 'bootstrap_3_layout.html.twig' %}

{{ form_start(searchForm) }}
{{ form_row(searchForm.keyword) }}
<div class="form-group">
<div>
{{ form_label(searchForm.frameSizes) }}
</div>
{{ form_widget(searchForm.frameSizes, {'label_attr': {'class': 'checkbox-inline'}}) }}
</div>
<div class="form-group">
<div>
{{ form_label(searchForm.frameTypes) }}
</div>
{{ form_widget(searchForm.frameTypes, {'label_attr': {'class': 'checkbox-inline'}}) }}
</div>
{{ form_row(searchForm.priceMin) }}
{{ form_row(searchForm.priceMax) }}
{{ form_row(searchForm.categories) }}
{{ form_row(searchForm.tags) }}
{{ form_widget(searchForm.search, {attr: {class: 'btn btn-white'}}) }}


{{ form_end(searchForm) }}
